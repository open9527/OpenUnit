<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.open.pkg.ui.search.SearchViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search"
            bindShapeDrawableRadius="@{40}"
            bindShapeDrawableSolidColor="@{@color/primary_color}"
            bindShapeDrawableStrokeColor="@{@color/line_color}"
            bindShapeDrawableStrokeWidth="@{1}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_search_height"
            android:layout_margin="@dimen/view_vertical_margin">

            <com.open.pkg.ui.view.ClearEditText
                android:id="@+id/et_search"
                android:layout_width="@dimen/view_0px"
                android:layout_height="@dimen/view_0px"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:hint="@string/search_hint_text"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/view_horizontal_padding"
                android:text="@{vm.valueKeyword}"
                android:textColor="@color/text_hint_color"
                android:textCursorDrawable="@drawable/edit_text_cursor_bg"
                android:textSize="@dimen/content_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableAutoLoadMore="true"
            app:srlEnableScrollContentWhenLoaded="true">

            <com.scwang.smart.refresh.header.MaterialHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

            <com.scwang.smart.refresh.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </LinearLayout>
</layout>